<!-- // views/sharing/share-created.ejs - Exibição do link de compartilhamento gerado -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <%- include('../partials/header') %>
  <title>CuidarJuntos - Link de Compartilhamento</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">CuidarJuntos</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Início</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cuidadores">Cuidadores</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/calendario">Calendário</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="card">
      <div class="card-header bg-success text-white">
        <h2><i class="fas fa-check-circle"></i> Link de Compartilhamento Criado</h2>
      </div>
      <div class="card-body">
        <div class="alert alert-info">
          <p><i class="fas fa-info-circle"></i> O link para compartilhamento do calendário foi criado com sucesso!</p>
          <p>Este link estará válido até <strong><%= moment(shareConfig.expiresAt).format('DD/MM/YYYY') %></strong>.</p>
        </div>
        
        <div class="form-group">
          <label for="shareLink">Link para compartilhamento:</label>
          <div class="input-group">
            <input type="text" class="form-control" id="shareLink" value="<%= shareLink %>" readonly>
            <div class="input-group-append">
              <button class="btn btn-outline-secondary" type="button" onclick="copyShareLink()">
                <i class="fas fa-copy"></i> Copiar
              </button>
            </div>
          </div>
        </div>
        
        <div class="qrcode-container">
          <h5>QR Code para compartilhamento</h5>
          <img src="<%= qrCodeDataURL %>" alt="QR Code" class="img-fluid" style="max-width: 200px;">
        </div>
        
        <div class="text-center mt-4">
          <button type="button" class="btn btn-success btn-lg" onclick="shareOnWhatsApp()">
            <i class="fab fa-whatsapp"></i> Compartilhar via WhatsApp
          </button>
        </div>
      </div>
      <div class="card-footer text-right">
        <a href="/calendario" class="btn btn-primary">Voltar para o Calendário</a>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
